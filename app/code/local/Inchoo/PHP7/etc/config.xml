<?xml version="1.0"?>
<config>
    <modules>
        <Inchoo_PHP7>
            <version>1.0.4</version>
        </Inchoo_PHP7>
    </modules>

    <global>
        <!-- Fix for incorrect sorting in the calculation of the discount -->
        <sales>
            <quote>
                <totals>
                    <msrp>
                        <before>grand_total</before>
                    </msrp>
                    <shipping>
                        <after>subtotal,freeshipping,tax_subtotal,msrp</after>
                    </shipping>
                </totals>
            </quote>
        </sales>
    </global>
</config>
